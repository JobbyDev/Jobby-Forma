{% extends 'base.html.twig' %}

{% block title 'Modifier vos information' %}

{% block body %}
    <br><br><br>
    <!-- BEGIN #checkout-info -->
    <div class="section-container mt-4" id="checkout-info">
        <!-- BEGIN container -->
        <div class="container">
            <!-- BEGIN checkout -->
            <div class="checkout">
                <!-- BEGIN checkout-header -->
                <div class="checkout-header">
                    <!-- BEGIN row -->
                    <div class="row">
                        <!-- BEGIN col-3 -->
                        <div class="col-lg-6">
                            <div class="step active">
                                <a href="#">
                                    <div class="number">
                                        <h1>Editer </h1>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- END col-3 -->
                    </div>
                    <!-- END row -->
                </div>
                <!-- END checkout-header -->
                <!-- BEGIN checkout-body -->
                {{ form_start(form) }}
                <div class="checkout-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.firstname, 'Votre Prénom') }}
                                {{ form_errors(form.firstname) }}
                                {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'id': 'firstname', 'required': 'required', 'placeholder': 'Entrer votre prénom' }}) }}
                                {{ form_label(form.lastname, 'Votre Nom') }}
                                {{ form_errors(form.lastname) }}
                                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'id': 'lastname', 'required': 'required', 'placeholder': 'Entrer votre nom de famille' }}) }}
                                {{ form_label(form.email, 'Votre adresse email') }}
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'id': 'email', 'required': 'required', 'placeholder': 'Exemple: jobby@gmail.com' }}) }}
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
                <!-- END checkout-body -->
                <!-- BEGIN checkout-footer -->

                <div class="checkout-footer d-flex">
                    <button type="submit" class="btn btn-dark btn-theme ms-10px">CONTINUE</button>
                </div>
                {{ form_end(form) }}
                <!-- END checkout-footer -->
            </div>
            <!-- END checkout -->
        </div>
        <!-- END container -->
    </div>
{% endblock %}